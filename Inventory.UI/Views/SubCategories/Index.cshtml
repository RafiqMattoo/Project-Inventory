@model IEnumerable<Inventory.DataAccess.TbSubCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SubCategory List:</h1>
<hr>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubCategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategoryDescription)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategoryDescription)
            </td>
          
            <td>
                <a asp-action="Edit"  class="btn btn-link text-success" asp-route-id="@item.SubCategoryId">Edit</a> |
                <a asp-action="Details"  class="btn btn-link text-success" asp-route-id="@item.SubCategoryId">Details</a> |
                 <form asp-action="Delete"  class="btn btn-link text-success" asp-route-id="@item.CategoryId" >
                    <input type="hidden"  class="btn btn-link text-success" asp-for="@item.CategoryId" />
                    <a> <input type="submit"  class="btn btn-link text-success" value="Delete" onclick=" return confirm('Are you sure to you want to delete @item.CategoryId?')" />  </a>  
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a class="btn btn-danger btn-lg " asp-action="Create">Create New</a>
</p>
