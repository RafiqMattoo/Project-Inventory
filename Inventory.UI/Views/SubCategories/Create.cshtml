@model Inventory.DataAccess.TbSubCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Sub Category</h1>
<hr />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                     <span asp-validation-for="SubCategoryName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SubCategoryName" class="control-label"></label>
                    <input asp-for="SubCategoryName" class="form-control" />
                    <span asp-validation-for="SubCategoryName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SubCategoryDescription" class="control-label"></label>
                    <input asp-for="SubCategoryDescription" class="form-control" />
                    <span asp-validation-for="SubCategoryDescription" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="IsActive" class="control-label"></label>
                    <br /> <input type="radio" asp-for="IsActive" value="" />Yes<br />
                    <input type="radio" asp-for="IsActive" value="No" />No<br />
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="IsDeleted" class="control-label"></label>
                    <br /> <input type="radio" asp-for="IsDeleted" value="Yes" />Yes<br />
                    <input type="radio" asp-for="IsDeleted" value="No" />No<br />
                    <span asp-validation-for="IsDeleted" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>

        </form>

    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
