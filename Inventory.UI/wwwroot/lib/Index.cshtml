@model IEnumerable<Inventory.DataAccess.TbCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
          
            <td>
                <a asp-action="Edit"  asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <form asp-action="Delete" asp-route-id="@item.CategoryId" >
                    <input type="hidden" asp-for="@item.CategoryId" />
                    <a> <input type="submit" class="btn-link" value="Delete" onclick=" return confirm('Are you sure to you want to delete @item.CategoryId?')" />  </a>  
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
